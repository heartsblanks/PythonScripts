import pygame
import random
import sys

pygame.init()

screen_width, screen_height = 800, 600
screen = pygame.display.set_mode((screen_width, screen_height))
pygame.display.set_caption("Confetti Pop on Click")

white = (255, 255, 255)
confetti_colors = [(255, 0, 0), (0, 255, 0)]  # Red for failed, green for passed
confetti_size = 10

confetti_positions = []

while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            sys.exit()
        elif event.type == pygame.MOUSEBUTTONDOWN:
            x, y = pygame.mouse.get_pos()
            color = random.choice(confetti_colors)
            confetti_positions.append((x, y, color))

    screen.fill(white)

    for confetti in confetti_positions:
        pygame.draw.circle(screen, confetti[2], (confetti[0], confetti[1]), confetti_size)

    pygame.display.flip()
    pygame.time.delay(50)

    confetti_positions = [(x, y + 5, color) for x, y, color in confetti_positions if y < screen_height]

# The program will only exit when the window is closed.